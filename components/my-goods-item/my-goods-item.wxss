/* components/my-goods-item/my-goods-item.wxss */
.img{
  width: 100%;
  border-radius: 10rpx;
  padding-bottom: 85rpx;
}
.goods-item{
  text-align: center;
  color: #333;

}

.title{
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 28rpx;
}
.info{
  font-size: 26rpx;
}
.price{
  color: #ff5777;
}
.info .icon{
  width: 30rpx;
  height: 30rpx;
  position: relative;
  top: 5rpx;
  padding: 0 6rpx 0 10rpx;
}
.desc-info{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 5rpx;
}
.cfav{
  position: relative;
}
